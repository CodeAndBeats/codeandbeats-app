.graph
  width 100%
  height 100%
  background red

.circle
  @extend .trans-all
  position absolute
  top 50%
  left 50%
  width 20px
  height 20px
  margin-left -10px
  margin-top -10px
  border-radius 10px
  background white
  box-shadow 0 0 0 8px rgba(0, 0, 0, .5)
  background-image: radial-gradient(
    yellow,
    orange
  )



.mask
  position absolute
  top 50px
  left 0
  width 100%
  height 100%
  background-image: -webkit-gradient(
    linear, left top, right bottom, from(rgba(220,220,220,0.2)),
    to(rgba(80,80,80,0.9))
  )
