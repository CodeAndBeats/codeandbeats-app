.graph
  width 100%
  height 100%
  background red

.circle
  @extend .trans-all
  position absolute
  top 50%
  left 50%
  width 20px
  height 20px
  margin-left -10px
  margin-top -10px
  border-radius 10px
  background grey

.mask
  position absolute
  top 50px
  left 0
  width 100%
  height 100%
  background-image: -webkit-gradient(
    linear, left top, right bottom, from(rgba(220,220,220,0.2)),
    to(rgba(80,80,80,0.9))
  );
